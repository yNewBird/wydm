<view class='text'>
  <text>指标分类导航</text>
</view>
<view wx:for="{{list}}" wx:key="content" wx:for-index="key">

  <view class="list-item">
    <view class="index-list-item">
      <view class="cover">
        <image class="cover-img" wx:if="{{item.hidden}}" src="../img/{{key}}-1.png"></image>
        <image class="cover-img" wx:if="!{{item.hidden}}" src="../img/{{key}}-2.png"></image>
      </view>
        <view class="content">
          
          <view class="weui-cell__bd" data-index='{{key}}' bindtap='hiddenBtn'>{{item.title}}</view>
          <view class="weui-cell__ft weui-cell__ft_in-access" data-index='{{key}}' bindtap='hiddenBtn' >点击</view>
        </view>
  </view>
</view>

  <view hidden='{{item.hidden}}'>
    <view class='line'></view>
    <view class='content'>
     <scroll-view style="height:300px" scroll-y="true" bindscrolltolower="scrollToLowerHandler">
        <block wx:for="{{item.arrData}}" wx:key="{{item.englishName}}">
           <view class="tr bg-g" id="{{index}}" data-typeid="{{key}}" bindtap="itemClick" wx:if="{{index %2 == 0}}">{{item.chineseName}}</view>
           <view class="tr" id="{{index}}" data-typeid="{{key}}" bindtap="itemClick" wx:else>{{item.chineseName}}</view>
           
        </block>
    </scroll-view>
    </view>
  </view>
  <view class='line_bottom'></view>
</view>


