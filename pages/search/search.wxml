<!--pages/search/search.wxml-->
<view class="weui-search-bar">   
  <view class="weui-search-bar__form">     
    <view class="weui-search-bar__box">        
      <icon class="weui-icon-search_in-box" type="search" size="14"></icon>        
      <input type="text" class="weui-search-bar__input" placeholder="输入规范名称"  bindfocus="wxSerchFocus" bindinput="wxSearchInput" bindblur="wxSearchBlur" />        
      <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">          
      <icon type="clear" size="14"></icon>        
      </view>
    </view>   
  </view>  
</view>  
<view wx:if="{{showHotSearch}}">
  <view>
    <text>  热门搜索：</text>
  </view>
  <view class="myFlex" >
    <view wx:for="{{hotSearchItems}}" wx:key="{{index}}">
    <button class="flexItem" plain="true" data-gag="{{item}}" bindtap="itemClick">{{item}}</button>
  </view>
  </view>
</view>
<view wx:for="{{hitData}}" wx:key="{{chineseName}}">
  <!--button class="tr bg-g" id="{{index}}" data-gag="{{item.chineseName}}" bindtap="itemClick" wx:if="{{index %2 == 0}}">{{item.chineseName}}</button>
  <button class="tr" id="{{index}}" data-gag="{{item.chineseName}}" bindtap="itemClick" wx:else>{{item.chineseName}}</button-->
  <view class="weui-cell__bd" id="{{index}}" data-gag="{{item.chineseName}}" bindtap="itemClick" >{{item.chineseName}}</view>
  <view class="weui-cell__ft weui-cell__ft_in-access" id="{{index}}" data-gag="{{item.chineseName}}" bindtap="itemClick" style="width=100%;border-bottom:1rpx solid #ccc">点击展开</view>
</view>

